{
  "name": "purescript-stbx-core",
  "version": "1.0.0",
  "description": "Statebox Core",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "postinstall": "PATH=node_modules/.bin:$PATH psc-package install",
    "build":       "PATH=node_modules/.bin:$PATH pulp --psc-package build",
    "watch":       "PATH=node_modules/.bin:$PATH pulp --psc-package -w browserify --to dist/app.js",
    "bundle":      "PATH=node_modules/.bin:$PATH pulp --psc-package browserify --optimise --to dist/app.js",
    "test":        "PATH=node_modules/.bin:$PATH pulp --psc-package test",

    "bower-build": "PATH=node_modules/.bin:$PATH pulp run",
    "bower-test": "PATH=node_modules/.bin:$PATH pulp test"
  },
  "keywords": [
    "statebox",
    "petrinet"
  ],
  "author": "Erik Post <erik@shinsetsu.nl>",
  "license": "Commercial",
  "devDependencies": {
    "pulp": "^12.3.0",
    "purescript": "^0.12.0",
    "purescript-psa": "^0.7.3"
  },
  "dependencies": {
    "bulma": "^0.7.2"
  }
}
